{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "lightning/utils": ["src/lightning/utils.js"],
      "lightning/utilsPrivate": ["src/lightning/utilsPrivate.js"],
      "lightning/helptext": ["src/lightning/helptext/helptext.js"],
      "lightning/primitiveBubble": [
        "src/lightning/primitiveBubble/primitiveBubble.js"
      ],
      "c/hello-world-app": ["src/components/helloWorldApp/helloWorldApp.ts"]
    }
  },
  "include": ["./scripts/**/*", "./src/**/*", "./typings/lwc/**/*.d.ts"]
}
